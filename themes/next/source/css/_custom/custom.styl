// Custom styles.
.post {
margin-top: 60px;
margin-bottom: 60px;
padding: 25px;
-webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
-moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}
// 文章内链接文本样式 
.post-body p a{ 
    color: #1f4287; 
    border-bottom: none; 
    border-bottom: 1px solid #1f4287; 
    &:hover { 
        color: #f5564e; 
        border-bottom: none; 
        border-bottom: 1px solid #f5564e; 
    } 
}
// 修改选中字符的颜色
/* webkit, opera, IE9 */
::selection { 
    background: #1f4287;
    color: #f7f7f7; 
}
/* firefox */
::-moz-selection { 
    background: #1f4287;
    color: #f7f7f7;    
}
// 修改网站头部颜色
.headband {
    height: 3px;
    background: #071e3d;
}
.site-meta {
    padding: 20px 0;
    color: #fff;
    background: #071e3d;
}
.site-subtitle {
    margin-top: 10px;
    font-size: 13px;
    color: #ffffff;
}
// 修改按键（button）样式
.btn {
    color: #071e3d;
    background: #fff;
    border: 2px solid #071e3d;
}
// 按键（button）点击时样式
.btn:hover {
  border-color: #071e3d;
  color: #fff;
  background: #071e3d;
}
// 鼠标移动至文章标题时的效果
.posts-expand .post-title-link::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #071e3d;
    visibility: hidden;
    -webkit-transform: scaleX(0);
    -moz-transform: scaleX(0);
    -ms-transform: scaleX(0);
    -o-transform: scaleX(0);
    transform: scaleX(0);
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
}